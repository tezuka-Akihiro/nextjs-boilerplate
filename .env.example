# ==========================================================
# tsumiage プロジェクト環境変数設定
# ==========================================================

# ==========================================================
# Supabase Configuration (新キー体系対応)
# ==========================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# 新キー体系 (推奨)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_new_publishable_key
SUPABASE_SECRET_KEY=sb_secret_your_new_secret_key

# レガシーキー (廃止予定 - 2025年11月まで)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Supabase CLI用（マイグレーション時のみ）
SUPABASE_ACCESS_TOKEN=your_supabase_access_token
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# ==========================================================
# Authentication Configuration
# ==========================================================
NEXTAUTH_SECRET=your_nextauth_secret_32_characters_long
NEXTAUTH_URL=http://localhost:3001

# Supabase Auth専用設定
SUPABASE_AUTH_REDIRECT_URL=http://localhost:3001/auth/callback
SUPABASE_AUTH_SUCCESS_REDIRECT=http://localhost:3001/dashboard
SUPABASE_AUTH_ERROR_REDIRECT=http://localhost:3001/auth/error

# ==========================================================
# Email Service (Resend)
# ==========================================================
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# ==========================================================
# Environment Configuration
# ==========================================================
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# ==========================================================
# Monitoring & Analytics
# ==========================================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=1
NEXT_PUBLIC_VERCEL_SPEED_INSIGHTS=1

# API監視・パフォーマンス追跡
NEXT_PUBLIC_API_MONITORING=false
NEXT_PUBLIC_PERFORMANCE_TRACKING=false

# デバッグモード
NEXT_PUBLIC_DEBUG_MODE=true

# ==========================================================
# Build Configuration
# ==========================================================
SKIP_ENV_VALIDATION=false
BUILD_ANALYZE=false

# ==========================================================
# External Services (Optional)
# ==========================================================
# Slack通知（エラーアラート用）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Sentry（エラー監視用）
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_project_name
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Google reCAPTCHA v3（スパム防止）
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ==========================================================
# Development Only
# ==========================================================
# 開発時のみ使用する設定
NEXT_PUBLIC_DEV_TOOLS=true
NEXT_PUBLIC_MOCK_API=false

# ==========================================================
# 本番環境用設定例（コメントアウト）
# ==========================================================
# NODE_ENV=production
# NEXT_PUBLIC_APP_ENV=production
# NEXTAUTH_URL=https://your-domain.vercel.app
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_API_MONITORING=true
# NEXT_PUBLIC_PERFORMANCE_TRACKING=true